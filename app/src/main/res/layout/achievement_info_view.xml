<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <com.example.joakes.xbox_sidekick.views.AspectRatioImageView
            android:id="@+id/achievement_icon"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <com.example.joakes.xbox_sidekick.views.ImageTextView
            android:id="@+id/achievement_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/achievement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/achievement_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/achievement_unlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textStyle="italic"/>
</LinearLayout>