<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.joakes.xbox_sidekick.views.CircularProgressBar
        android:id="@+id/gamerscore_progress_bar"
        android:layout_width="?android:listPreferredItemHeight"
        android:layout_height="?android:listPreferredItemHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/gamerscore_progress_bar"
        android:layout_toRightOf="@id/gamerscore_progress_bar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold" />

        <com.example.joakes.xbox_sidekick.views.ImageTextView
            android:id="@+id/game_achievements_image_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.joakes.xbox_sidekick.views.ImageTextView
            android:id="@+id/gamerscore_image_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>