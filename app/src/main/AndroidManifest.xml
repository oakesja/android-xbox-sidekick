<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joakes.xbox_sidekick" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AchievementsActivity"
            android:label="@string/title_activity_achievements"
            android:parentActivityName=".GameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.joakes.xbox_sidekick.GameActivity" />
        </activity>
        <activity
            android:name=".AchievementHelpActivity"
            android:label="@string/title_activity_achievement_help"
            android:parentActivityName=".AchievementsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.joakes.xbox_sidekick.AchievementsActivity" />
        </activity>
    </application>

</manifest>
